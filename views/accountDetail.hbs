<div class="justify-content-between d-flex"
  style=" background: white; padding: 0.5rem 1rem; margin: auto 1rem;  box-shadow: 0 0 5px hsl(0, 0%, 90%);">
  <h5>Quản lý tài khoản người dùng</h5>
  <div>
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Tìm kiếm" aria-label="Search" />
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
        <i class="fas fa-search"></i>
      </button>
    </form>
  </div>
</div>
<div class="card justify-content-center">
  <form>
    <div class="form-group">
      <label for="id">ID Người dùng</label>
      <input type="text" class="form-control" id="userID" value="1100000" disabled />
    </div>
    <div class="form-group">
      <label for="address">Họ tên</label>
      <input type="text" class="form-control" id="name" value="Nguyen Van A" />
    </div>
    <div class="form-group">
      <label for="name">Email</label>
      <input type="email" class="form-control" id="email" value="dayla@email.com" disabled />
    </div>
    <div class="form-group">
      <label for="address">Giới tính</label>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="gender" id="maleGender" value="male" checked />
        <label class="form-check-label" for="maleGender">
          Nam
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="gender" id="femaleGender" value="female" />
        <label class="form-check-label" for="femaleGender">
          Nữ
        </label>
      </div>
    </div>
    <div class="text-right">
      <button class="btn btn-secondary">Cập nhật</button>
      <button class="btn btn-warning">Vô hiệu hóa tài khoản</button>
    </div>
  </form>
</div>