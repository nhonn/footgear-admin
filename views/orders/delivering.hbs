<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <ul class="nav nav-pills">
                            <li class="nav-item">
                                <a class="nav-link" href="/order/done" role="tab" aria-controls="pills-home"
                                    aria-selected="true">Đã giao</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="/order/delivering" role="tab"
                                    aria-controls="pills-profile" aria-selected="false">Đang giao</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/order/receive" role="tab" aria-controls="pills-contact"
                                    aria-selected="false">Chưa giao</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Mã đơn hàng</th>
                                    <th>Tổng tiền</th>
                                    <th>Ngày đặt hàng</th>
                                    <th>Địa chỉ</th>
                                    <th>Số điện thoại</th>
                                    <th>Cập nhật</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each data}}
                                <tr>
                                    <th scope="row">{{this.id}}</th>
                                    <td>{{this.price}}</td>
                                    <td>{{this.create}}</td>
                                    <td>{{this.address}}</td>
                                    <td>{{this.phone}}</td>
                                    <td>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <a style="color: green" class="fa fa-check" href="#" alt="Giao hàng thành công"></a>
                                            </div>
                                            <div class="col-sm-3">
                                                 <a style="color: red" class="fa fa-times" href="#" alt="Hủy đơn hàng"></a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->