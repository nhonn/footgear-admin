<section class="container">
    <table class="table table-striped paper">
        <thead class="thead-dark">
            <tr class="d-flex">
                <th class="col-2">Mã đơn hàng</th>
                <th class="col-2">Ngày đặt hàng</th>
                <th class="col-2">Tổng tiền</th>
                <th class="col-4">Địa chỉ</th>
                <th class="col-2">Xử lý</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr class="d-flex">
                <td class="col-2">{{this.orderID}}</td>
                <td class="col-2">{{this.date}}</td>
                <td class="col-2">{{this.totalPrice}}</td>
                <td class="col-4">{{this.address}}</td>
                <td class="col-2"><a href="/orders/shipping/{{this.orderID}}" class="text-success">Giao hàng xong</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section><!-- .content -->