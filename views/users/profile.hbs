<section class="container">
  <form class="paper d-flex-inline align-items-center">
    <div class="form-group">
      <div class="input-group">
        <label class="col-3">Mã khách hàng</label>
        <input type="text" name="userID" class="form-control col-9" disabled value={{user.userID}}>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <label class="col-3">Họ tên khách hàng</label>
        <input type="text" name="fullname" class="form-control" value={{user.fullname}}>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <label class="col-3">Email</label>
        <input type="email" name="email" placeholder="Email" class="form-control" disabled value={{user.email}}>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <label class="col-3">Số điện thoại</label>
        <input type="text" name="phone" placeholder="Số điện thoại" class="form-control" value={{user.phone}}>
      </div>
    </div>
    <div class="form-group d-flex align-items-center">
      <label class="col-3">Giới tính</label>
      {{#if user.gender}}
      <div class="form-check col-3 text-center">
        <input class="form-check-input" type="radio" name="radio" value="male">
        <label class="form-check-label">
          Nam
        </label>
      </div>
      <div class="form-check col-3">
        <input class="form-check-input" type="radio" name="radio" value="female" checked>
        <label class="form-check-label">
          Nữ
        </label>
      </div>
      {{else}}
      <div class="form-check col-3">
        <input class="form-check-input" type="radio" name="radio" value="male" checked>
        <label class="form-check-label">
          Nam
        </label>
      </div>
      <div class="form-check col-3">
        <input class="form-check-input" type="radio" name="radio" value="female">
        <label class="form-check-label">
          Nữ
        </label>
        {{/if}}
      </div>
    </div>
    <hr>
    <div class="d-flex">
      <button type="submit" class="btn btn-warning">Cập nhật thông tin</button>
      <button type="submit" class="btn btn-default">Nhập lại</button>
      <button type="submit" class="btn btn-success ml-auto">Reset mật khẩu</button>
    </div>
  </form>
</section>