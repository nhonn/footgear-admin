<section class="container">
  {{#if user.isActive}}
  <div class="paper text-right text-light" style="background: #4cff4c;">Đang hoạt động</div>
  {{else}}
  <div class="paper text-right text-light" style="background: #ff3232;">Đang khóa</div>
  {{/if}}
  <form class="paper d-flex-inline align-items-center" data-parsley-validate="" method="POST"
    action="/users/profile/{{user.userID}}">
    <div class="form-group">
      <div class="input-group">
        <label class="col-3">Mã khách hàng</label>
        <input type="text" name="userID" class="form-control col-9" value="{{user.userID}}" disabled>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <label class="col-3">Họ tên khách hàng</label>
        <input type="text" name="fullname" class="form-control" value="{{user.fullname}}" required="">
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <label class="col-3">Email</label>
        <input type="email" name="email" placeholder="Email" class="form-control" value="{{user.email}}" disabled>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <label class="col-3">Số điện thoại</label>
        <input type="text" name="phone" placeholder="Số điện thoại" class="form-control" value="{{user.phone}}"
          data-parsley-type="digits" data-parsley-minlength="10" data-parsley-maxlength="10"
          data-parsley-trigger="keyup" data-parsley-error-message="Số điện thoại không hợp lệ.">
      </div>
    </div>
    <div class="form-group d-flex align-items-start">
      <label class="col-3">Giới tính</label>
      {{#if user.gender}}
      <div class="form-check col-3 text-center">
        <input class="form-check-input" type="radio" name="gender" value="0">
        <label class="form-check-label">
          Nam
        </label>
      </div>
      <div class="form-check col-3">
        <input class="form-check-input" type="radio" name="gender" value="1" checked>
        <label class="form-check-label">
          Nữ
        </label>
      </div>
      {{else}}
      <div class="form-check col-3">
        <input class="form-check-input" type="radio" name="gender" value="0" checked>
        <label class="form-check-label">
          Nam
        </label>
      </div>
      <div class="form-check col-3">
        <input class="form-check-input" type="radio" name="gender" value="1">
        <label class="form-check-label">
          Nữ
        </label>
      </div>
      {{/if}}
    </div>
    <hr>
    <div class="d-flex">
      <button type="submit" class="btn btn-warning text-light">Cập nhật thông tin</button>
      <button type="reset" class="btn btn-default">Nhập lại</button>
      {{#if user.isActive}}
      <a type="button" class="btn btn-success ml-auto" href="/users/lock/{{user.userID}}">Khóa tài
        khoản</a>
      {{else}}
      <a type="button" class="btn btn-success ml-auto" href="/users/unlock/{{user.userID}}">Mở tài
        khoản</a>
      {{/if}}
    </div>
  </form>
</section>