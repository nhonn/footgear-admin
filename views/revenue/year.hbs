<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <strong>Thống kê trong năm</strong>
        </div>
        <div class="row justify-content-center">
            <div class="card-body card-block col-sm-4">
                <div class="form-group">
                    <label class="form-control-label">Chọn năm</label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-calendar-week"></i></div>
                        <select name="select" id="select" class="form-control">
                            {{#each years}}
                            <option value={{this}}>{{this}}</option>
                            {{/each}}
                        </select>
                        <button class="btn btn-primary">Xem</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-sm">
    <div class="card">
        <div class="card-body">
            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Mã sản phẩm</th>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <th scope="row">{{this.id}}</th>
                        <td>{{this.name}}</td>
                        <td>{{this.count}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.total}}</td>
                    </tr>
                    {{else}}
                    <tr>
                        <p class="form-control-static">Không có dữ liệu</p>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="card-header">
            <strong>Tổng cộng: {{totalSum}} đồng</strong>
        </div>
    </div>
</div>